<center>
<div class="container">
<h2>Esqueceu a senha?</h2>
<div class="col-md-4">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite aqui seu email" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Me enviar instruções no email", class: 'btn btn-lg btn-outline-info btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</center>