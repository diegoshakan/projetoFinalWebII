<center>
  <div class="container">

  <h2>Cadastrar</h2>
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username"  %>
      </div>

      <div class="field">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha"  %>
        <% if @minimum_password_length %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repita a senha" %>
      </div>
          <em>(<%= @minimum_password_length %> caracteres no mÃ­nimo)</em>
        <% end %>
      <div class="actions">
        <%= f.submit "Cadastrar", class: 'btn btn-lg btn-outline-success btn-block' %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
</center