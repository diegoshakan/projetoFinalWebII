<div class='col-md-6 col-lg-5'>
<%= form_with(model: tarefa, local: true) do |form| %>
  <% if tarefa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tarefa.errors.count, "error") %> </h2>

      <ul>
      <% tarefa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :Título %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :descrição %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :Data %>
    <%= form.date_select :date, class: "form-control form-control-sm" %>
  </div>

  <div class="actions">
    <%= form.submit name, class:'btn btn-success' %>
  </div>
<% end %>
</div>